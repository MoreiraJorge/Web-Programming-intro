            "required": [
                "code"
            ],
            "properties": {
                "_id": {
                    "type": "string",
                    "uniqueItems": true
                },
                "code": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "userHistory": {
                    "type": "string"
                },
                "userStatus": {
                    "type": "string"
                },
                "riskGroup": {
                    "type": "string"
                },
                "riskJob": {
                    "type": "string"
                },
                "testStatus": {
                    "type": "string"
                },
                "testResult": {
                    "type": "string"
                },
                "resultFile": {
                    "type": "string"
                },
                "isTestDone": {
                    "type": "boolean"
                },
                "schedule": {
                    "type": "string",
                    "format": "date"
                },
                "user": {
                    "type": "object",
                    "$ref": "#/definitions/User"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date",
                    "default": "Date.now"
                }
            }
        },
        "User": {
            "required": [
                "email",
                "password",
                "idCard"
            ],
            "properties": {
                "_id": {
                    "type": "string",
                    "uniqueItems": true
                },
                "name": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "age": {
                    "type": "number"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "phoneNumber": {
                    "type": "number"
                },
                "idCard": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                },
                "covtest": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Covtest"
                    }
                },
                "updated_at": {
                    "type": "string",
                    "format": "date",
                    "default": "Date.now"
                }
            }
        },
        "Covtests": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Covtest"
