{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "API de gestão de utilizadores e testes de COVID-19",
        "description": "API que faz a gestão de utilizadores (técnicos, clientes e admins) e de testes de covid-19 de um centro de analises"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "tags": [
        {
            "name": "Autenticação",
            "description": "Rotas de autenticação"
        },
        {
            "name": "Techs",
            "description": "Rotas de manipulação de técnicos"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "components": {
		"securitySchemes": {
			"cookieAuth": {
				"type": "apiKey",
				"in": "header",
				"name": "session"
            },
            "authentication": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header"
            }
		}
    },
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Autenticação"
                ],
                "description": "Rota usada para fazer login",
                "security": [],
                "parameters": [
                    {
                        "name": "login",
                        "in": "body",
                        "required": true,
                        "description": "Dados de login",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Login Efetuado",
                        "schema": {
                            "$ref": "#/definitions/User"
                        },
                        "headers": {
                            "Set-Cookie": {
                                "schema": {
                                    "type": "string",
                                    "example": "session=abcde12345; Path=/; HttpOnly"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Login Failed"
                    }
                }
            }
        },
        "/techs/techList": {
            "get": {
                "security": [
                    {
                        "cookieAuth": [],
                        "authentication": []
                    }
                ],
                "tags": [
                    "Techs"
                ],
                "summary": "Obter todos os técnicos",
                "responses": {
                    "200": {
                        "description": "Ok",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    },
                    "400": {
                        "description": "Não autorizado"
                    }
                }
            },
            "security": {
                "authentication": []
            }
        }
    },
    "definitions": {
        "Covtest": {
            "required": [
                "code"
            ],
            "properties": {
                "_id": {
                    "type": "string",
                    "uniqueItems": true
                },
                "code": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "userHistory": {
                    "type": "string"
                },
                "userStatus": {
                    "type": "string"
                },
                "riskGroup": {
                    "type": "string"
                },
                "riskJob": {
                    "type": "string"
                },
                "testStatus": {
                    "type": "string"
                },
                "testResult": {
                    "type": "string"
                },
                "resultFile": {
                    "type": "string"
                },
                "isTestDone": {
                    "type": "boolean"
                },
                "schedule": {
                    "type": "string",
                    "format": "date"
                },
                "user": {
                    "type": "object",
                    "$ref": "#/definitions/User"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date",
                    "default": "Date.now"
                }
            }
        },
        "Covtests": {
            "type": "array",
            "$ref": "#/definitions/Covtest"
        },
        "User": {
            "required": [
                "email",
                "password",
                "idCard"
            ],
            "properties": {
                "_id": {
                    "type": "string",
                    "uniqueItems": true
                },
                "name": {
                    "type": "string"
                },
                "address": {
                    "type": "string"
                },
                "age": {
                    "type": "number"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "phoneNumber": {
                    "type": "number"
                },
                "idCard": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                },
                "covtest": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Covtest"
                    }
                },
                "updated_at": {
                    "type": "string",
                    "format": "date",
                    "default": "Date.now"
                }
            }
        },
        "Users": {
            "type": "array",
            "$ref": "#/definitions/User"
        }
    }
}